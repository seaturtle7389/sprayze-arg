<%= form_for [:admin, @user], html: {class: "w-full"} do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="flex flex-wrap -mx-3 mt-3">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <%= form.label :username, "Discord Username*", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :username, value: @user.discord_tag, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", disabled: true %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= form.label :email, "Email*", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :email, value: @user.email, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", disabled: true %>
    </div>
    <div class="w-full px-3 mt-3 mb-3">
      <div class="form-check">
        <%= form.label :admin, "Admin?", class: "form-check-label inline-block text-gray-800" %>
        <%= form.check_box :admin, class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-white checked:bg-blue-600 checked:border-blue-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer" %>
      </div>

      <div class="form-check">
        <%= form.label :sprayze_member, "Sprayze?*", class: "form-check-label inline-block text-gray-800" %>
        <%= form.check_box :sprayze_member, class: "form-check-input appearance-none h-4 w-4 border border-gray-300 rounded-sm bg-gray checked:bg-gray-600 checked:border-gray-600 focus:outline-none transition duration-200 mt-1 align-top bg-no-repeat bg-center bg-contain float-left mr-2 cursor-pointer", disabled: true %>
      </div>
    </div>
  </div>

  <div class="text-sm mb-3">
    *These fields are automatically managed by Discord integration and cannot be manually changed.
  </div>

  <div>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>
